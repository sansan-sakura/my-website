---
import Heading from "../ui/Heading";
---

<div class="container" id="contact">
  <Heading heading={"CONTACT"} />
  <section class="contact">
    <img src="/images/mail.svg" alt="" />
    <div class="contact_form">
      <form method="POST" id="form">
        <label>
          <input type="text" name="subject" placeholder="Name*" />
        </label>
        <label>
          <input type="email" name="email" required placeholder="Email*" />
        </label>

        <label>
          <textarea name="Message" required placeholder="Message*"></textarea>
        </label>
        <button type="submit">Submit</button>
      </form>
    </div>
  </section>
</div>

<script>
  const form = document.getElementById("form");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const res = await fetch("/api/handler");

    console.log(res);
    const data = await res.text();
    console.log(data);
  });
</script>

<style lang="scss">
  @use "../../styles/scss/variables.scss" as *;

  .contact {
    display: flex;
    flex-direction: column-reverse;
    align-items: center;
  }

  img {
    width: 300px;
    margin-bottom: 80px;
    animation: bounce 1s infinite;
    filter: sepia(7%) brightness(98%) opacity(93%);
    -webkit-filter: sepia(7%) brightness(98%) opacity(93%);
    -moz-filter: sepia(7%) brightness(98%) opacity(93%);
  }

  .contact_form {
    margin: 100px auto 60px;
    padding: 26px 16px;
    border-radius: 10px;
    box-shadow: $shadow-lg;
    display: flex;
    overflow: hidden;
    width: 90%;
  }

  form {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    gap: 40px;
    font-family: $font-text;
  }

  label {
    display: block;
    width: 100%;
  }

  input,
  textarea,
  button {
    display: block;
    width: 100%;
    border: none;
    padding: 10px 40px;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1),
      0 4px 6px -4px rgb(0 0 0 / 0.1);
    border-radius: 10px;
  }

  input:focus,
  textarea:focus {
    outline: 3px solid rgba(82, 152, 82, 0.462);
  }

  textarea {
    display: block;
    width: 100%;
    height: 150px;
    resize: none;
  }

  button {
    cursor: pointer;
    background-color: rgba(82, 152, 82, 0.462);
    color: #fff;
  }

  button:hover {
    background-color: rgba(82, 152, 82);
  }

  button:active {
    transform: translate3d(-2px);
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateY(-10%);
      animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
    }
    50% {
      transform: translateY(0);
      animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
    }
  }

  @media (min-width: 600px) {
    .contact_form {
      width: 500px;
      margin-bottom: 80px;
      padding: 40px 30px;
      border-radius: 20px;
    }

    img {
      width: 380px;
    }
  }

  @media (min-width: 768px) {
    .contact_form {
      border-radius: 30px;
    }
  }

  @media (min-width: 1024px) {
    .contact {
      flex-direction: row;
    }

    img {
      width: 500px;
    }

    .contact_form {
      width: 40%;
      margin: 100px auto;
      padding: 40px 30px;
    }
  }
  @media (min-width: 1280px) {
  }
</style>
